<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="55dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="476dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Username"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textInputEditText"
        app:layout_constraintStart_toStartOf="@+id/textInputEditText2"
        tools:layout_editor_absoluteY="352dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="385dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Password"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textInputEditText2"
        tools:layout_editor_absoluteY="449dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/material_dynamic_secondary10"
        android:text="Sign In"
        android:padding="10dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textInputEditText2"
        app:layout_constraintStart_toStartOf="@+id/textInputEditText2"
        tools:layout_editor_absoluteY="578dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="658dp"
        android:layout_height="299dp"
        app:srcCompat="@drawable/brie"
        tools:layout_editor_absoluteX="-124dp"
        tools:layout_editor_absoluteY="69dp"

</androidx.constraintlayout.widget.ConstraintLayout>