<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background transparan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Background transparan -->
        </shape>
    </item>

    <!-- Outline di atas -->
    <item
        android:gravity="top">
        <shape android:shape="rectangle">
            <size android:height="1dp" /> <!-- Ketebalan garis atas -->
        </shape>
    </item>

    <!-- Outline di bawah -->
    <item
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="1dp" /> <!-- Ketebalan garis bawah -->
            <solid android:color="@color/transparent"/> <!-- Warna ungu untuk outline -->
        </shape>
    </item>
</layer-list>
