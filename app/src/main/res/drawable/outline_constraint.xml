<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="16dp" /> <!-- Atur radius untuk corner -->
        </shape>
    </item>

    <!-- Outline/Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#000000" /> <!-- Warna outline hitam -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
